<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_skip_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip_to" />

    <EditText
        android:id="@+id/et_skip_to"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_skip_to"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et_skip_to"
        android:text="@string/page" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/tv_page"
        android:text="@string/confirm" />
    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/btn_confirm"
        android:text="@string/cancle" />

</RelativeLayout>